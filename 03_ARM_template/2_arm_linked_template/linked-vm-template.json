{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "System": {
           "type": "string",
           "defaultValue":"bpm",
           "metadata": {
                "description": "Name of system"
            }
        },
        "Envirnoment": {
           "type": "string",
           "defaultValue":"test",
           "allowedValues":[
               "dev",
               "test",
               "support",
               "prod"
           ],
           "metadata": {
                "description": "Envirnoment"
            }
        },
        "Type": {
           "type": "string",
           "metadata": {
                "description": "Type"
            }
        },
        "Subnet": {
           "type": "string",
           "metadata": {
                "description": "Subnet"
            }
        },
        "virtualNetworkName": {
           "type": "string",
           "metadata": {
                "description": "Virtual Network Name"
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Username for the Virtual Machine."
            }
        },
        "adminPassword": {
            "type": "securestring",
            "metadata": {
                "description": "SSH Key or password for the Virtual Machine. SSH key is recommended."
            }
        },
        "dnsLabelPrefix": {
            "type": "string",
            "defaultValue": "[toLower(concat('simplelinuxvm-', uniqueString(resourceGroup().id)))]",
            "metadata": {
                "description": "Unique DNS Name for the Public IP used to access the Virtual Machine."
            }
        },
        "ubuntuOSVersion": {
            "type": "string",
            "defaultValue": "18.04-LTS",
            "allowedValues": [
                "12.04.5-LTS",
                "14.04.5-LTS",
                "16.04.0-LTS",
                "18.04-LTS"
            ],
            "metadata": {
                "description": "The Ubuntu version for the VM. This will pick a fully patched image of this given Ubuntu version."
            }
        },
        "VmSize": {
            "type": "string",
            "defaultValue": "Standard_B2s",
            "metadata": {
                "description": "The size of the VM"
            }
        }
    },
    "variables": {
        "fullSystemName":"[concat(parameters('System'),substring(parameters('envirnoment'),0,1))]",
        "osDiskType": "Standard_LRS"
    },
    "resources": [
                {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2018-10-01",
            "name": "[concat(variables('fullSystemName'),'nic',parameters('Type'))]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups/',concat(variables('fullSystemName'),'nsg',parameters('Type')))]",
                //"[resourceId('Microsoft.Network/virtualNetworks/', parameters('virtualNetworkName'))]",
                "[resourceId('Microsoft.Network/publicIpAddresses/', concat(variables('fullSystemName'),'pip',parameters('Type')))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig-db",
                        "properties": {
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets',parameters('virtualNetworkName'),parameters('Subnet'))]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIpAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIPAddresses',concat(variables('fullSystemName'),'pip',parameters('Type')))]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId('Microsoft.Network/networkSecurityGroups',concat(variables('fullSystemName'),'nsg',parameters('Type')))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2019-02-01",
            "name": "[concat(variables('fullSystemName'),'nsg',parameters('Type'))]",
            "location": "[resourceGroup().location]",
            "properties": {
                "securityRules": [
                    {
                        "name": "SSH",
                        "properties": {
                            "priority": 1000,
                            "protocol": "TCP",
                            "access": "Allow",
                            "direction": "Inbound",
                            "sourceAddressPrefix": "*",
                            "sourcePortRange": "*",
                            "destinationAddressPrefix": "*",
                            "destinationPortRange": "22"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/publicIpAddresses",
            "apiVersion": "2019-02-01",
            "name": "[concat(variables('fullSystemName'),'pip',parameters('Type'))]",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIpAllocationMethod": "Dynamic",
                "publicIPAddressVersion": "IPv4",
                // "dnsSettings": {
                //     "domainNameLabel": "[parameters('dnsLabelPrefix')]"
                // },
                "idleTimeoutInMinutes": 4
            },
            "sku": {
                "name": "Basic",
                "tier": "Regional"
            }
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2019-03-01",
            "name": "[concat(variables('fullSystemName'),'vm',parameters('Type'))]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces/', concat(variables('fullSystemName'),'nic',parameters('Type')))]"
            ],
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('VmSize')]"
                },
                "storageProfile": {
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "[variables('osDiskType')]"
                        }
                    },
                    "imageReference": {
                        "publisher": "Canonical",
                        "offer": "UbuntuServer",
                        "sku": "[parameters('ubuntuOSVersion')]",
                        "version": "latest"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces/', concat(variables('fullSystemName'),'nic',parameters('Type')))]"
                        }
                    ]
                },
                "osProfile": {
                    "computerName": "[concat(variables('fullSystemName'),'vm',parameters('Type'))]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]"
                }
            }
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "string",
            "value": "[parameters('adminUsername')]"
        },
        "publicIP": {
            "type": "string",
            "value": "[reference(concat(variables('fullSystemName'),'pip',parameters('Type'))).publicIpAddress]"
        }
    }
}
